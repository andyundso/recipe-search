<%= form_with url: find_search_index_path, class: "w-full" do |f| %>
  <div class="flex space-x-4 w-full">
    <div class="w-1/2" data-controller='tom-select'>
      <%= f.label :included, "I'm really in for ..." %>
      <%= f.select :included, Ingredient.order(:name).pluck(:name), { include_blank: true }, { multiple: true } %>
    </div>

    <div class="w-1/2" data-controller='tom-select'>
      <%= f.label :excluded, "Go away with ..." %>
      <%= f.select :excluded, Ingredient.order(:name).pluck(:name), { include_blank: true }, { multiple: true, data: { controller: 'tom-select' } } %>
    </div>
  </div>

  <button class="bg-gray-200 hover:bg-gray-500 text-gray-700 font-bold py-2 px-4 my-4 rounded" >Get me some ideas!</button>
<% end %>

<%= turbo_frame_tag "search_results", class: "w-full" %>
